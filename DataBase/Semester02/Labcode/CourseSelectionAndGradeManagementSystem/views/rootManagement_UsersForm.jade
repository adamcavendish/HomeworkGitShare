form(id='AddStudent_form' class='form-horizontal' role='form')
    legend Add A Student
    div(class='form-group')
        label(for='inputID' class='col-sm-2 control-label') ID
        div(class='col-sm-10')
            input(type='text' class='form-control' name='inputID' id='inputID' placeholder='ID')
    div(class='form-group')
        label(for='inputName' class='col-sm-2 control-label') Name
        div(class='col-sm-10')
            input(type='text' class='form-control' name='inputName' id='inputName' placeholder='Name')
    div(class='form-group')
        label(for='inputGender' class="col-sm-2 control-label") Gender
        div(class='radio col-sm-5')
            label
                input(type='radio' name='genderRadios' id='inputGenderMale' value='true' checked)
                span Male
        div(class='radio col-sm-5')
            label
                input(type='radio' name='genderRadios' id='inputGenderFemale' value='false')
                span Female
    div(class='form-group')
        label(for='inputAge' class='col-sm-2 control-label') Age
        div(class='col-sm-10')
            input(type='text' class='form-control' name='inputAge' id='inputAge' placeholder='Age')
    div(class='form-group')
        label(for='inputCollege' class='col-sm-2 control-label') CollegeID
        div(class='col-sm-10')
            input(type='text' class='form-control' name='inputCollege' id='inputCollege' placeholder='CollegeID')
    div(class='form-group')
        label(for='inputLogn' class='col-sm-2 control-label') Logn
        div(class='col-sm-10')
            input(type='text' class='form-control' name='inputLogn' id='inputLogn' placeholder='Logn')
    div(class='form-group')
        label(for='inputPswd' class='col-sm-2 control-label') Pswd
        div(class='col-sm-10')
            input(type='password' class='form-control' name='inputPswd' id='inputPswd' placeholder='Pswd')
    div(class='form-group')
        div(class='col-sm-offset-2 col-sm-10')
            button(id='AddStudent_btn' class='btn btn-primary' onclick='AddStudent_btnClick()') Add
            span &nbsp
            button(type='reset' class='btn btn-default') Reset